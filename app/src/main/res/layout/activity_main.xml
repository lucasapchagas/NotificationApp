<?xml version= "1.0" encoding= "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearBox"
        android:layout_width="383dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCreateNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:text="Notify" />

        <Button
            android:id="@+id/btnAlterNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:text="Alter" />

        <Button
            android:id="@+id/btnRedactNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:text="Redact" />
    </LinearLayout>

    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_below = "@+id/linearBox"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:layout_alignParentBottom = "true" >
        <TextView
            android:id= "@+id/textView"
            android:layout_width= "match_parent"
            android:layout_height= "wrap_content"
            android:text= "NotificationListenerService Example"
            android:textAppearance= "?android:attr/textAppearanceMedium" />
    </ScrollView>

</RelativeLayout>